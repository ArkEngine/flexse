    "STRUCTMASK":
    {
        // 以下配置一旦改变就需要重做数据 
        // 倒排索引部分的数据考虑固定化
        "posting_list_cell":
        [
            {"id"            : 29},
            {"title_hit"     :  1}, // 当在title的field中出现时，设置为1
            {"tag_hit"       :  1}, // 当在tag的field中出现时，设置为1
            {"anchor_hit"    :  1}, // 当在anchor的field中出现时，设置为1
            {"hit_count"     :  4}, // 在文档中出现次数
            {"tf"            :  3},
            {"idf"           :  3},
            {"weight"        : 10}, // 文本的基础权重
            {"offset1"       :  6}, // term出现的第一个位置
            {"offset2"       :  6}  // term出现的第二个位置 = term出现的第一个位置 + offset2
        ],
        "document_attribute":
        [
            {"vid"           : 32}, // 视频的vid
            {"wth_num"       : 32}, // 播放数
            {"cmt_num"       : 32}, // 评论数
            {"duration"      : 32}, // 时间长度
            {"vsign1"        : 32}, // 视频签名1
            {"vsign2"        : 32}  // 视频签名2
        ] 
    }
